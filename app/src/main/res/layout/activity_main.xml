<FrameLayout
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <android.caseystalnaker.com.popinvideodemo.SquareLayout
        android:id="@+id/video_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ToggleButton
            android:id="@+id/video_toggle_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/record_btn"
            android:layout_alignBottom="@id/video_wrapper"
            android:layout_alignRight="@id/video_wrapper"
            android:textOff=""
            android:textOn=""/>

        <TextureView
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.caseystalnaker.com.popinvideodemo.SquareLayout>
</FrameLayout>