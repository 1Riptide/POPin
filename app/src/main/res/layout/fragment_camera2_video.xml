<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.caseystalnaker.android.popinvideodemo.widgets.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/countdown_timer_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/countdown_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Remaining: "
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:padding="@dimen/activity_horizontal_margin" />

        <TextView
            android:id="@+id/countdown_format_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="@dimen/activity_horizontal_margin" />

    </LinearLayout>

    <ToggleButton
        android:id="@+id/video_toggle_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/record_btn"
        android:layout_alignBottom="@id/texture"
        android:layout_centerHorizontal="true"
        android:textOff=""
        android:textOn=""
        android:layout_margin="@dimen/activity_horizontal_margin"/>

</RelativeLayout>